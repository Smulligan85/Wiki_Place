<div class="container">
<%= form_for @wiki do |f| %>
  <% if @wiki.errors.any? %>
    <div id="errors">
        <h2><%= pluralize(@wiki.errors.count, "error") %> prevented this post from saving.</h2>
      <ul>
        <%= @wiki.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <div class= "form-group">
    <%= f.label :body %><br />
    <%= f.text_area :body, rows: 8, class: 'form-control' %>
  </div>

  <% if current_user.role == 'admin' || current_user.role == 'premium' %>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private wiki
      <% end %>
    </div>

  <% end %>



  <div class= "form-group">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>

  <% @users.each do |user| %> 
  <%= form_for [@wiki, @wiki.collaborators.build] do |f| %>
  <% if user != current_user %>
  <div class="form-group">

  </div>
  <% end %>
  <% end %>

  <div class= "form-group">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
  
<% end %>
</div>






