<!-- Page Header
<!-- Set your background image for this header on the line below. -->
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Create a New Wiki</h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
<%= form_for @wiki do |f| %>
  <% if @wiki.errors.any? %>
    <div id="errors">
        <h2><%= pluralize(@wiki.errors.count, "error") %> prevented this post from saving.</h2>
      <ul>
        <%= @wiki.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Add Wiki Title" %>
  </div>

  <div class= "form-group">
    <%= f.label :body %><br />
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Add Wiki Body" %>
  </div>

  <% if current_user.role == 'admin' || current_user.role == 'premium' %>
    <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private wiki
      <% end %>
    </div>
  <% end %>

  <div class= "form-group">
  <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>

<% end %>
</div>
